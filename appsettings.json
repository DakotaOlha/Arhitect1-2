{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CodeLearningPlatformDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CodeExecution": {
    "TimeoutSeconds": 30,
    "MaxMemoryMB": 128,
    "EnableSandbox": true,
    "SupportedLanguages": [
      {
        "Name": "Python",
        "Extension": ".py",
        "Version": "3.11",
        "Command": "python",
        "IsActive": true
      },
      {
        "Name": "C#",
        "Extension": ".cs",
        "Version": "12.0",
        "Command": "dotnet",
        "IsActive": true
      },
      {
        "Name": "JavaScript",
        "Extension": ".js",
        "Version": "ES2023",
        "Command": "node",
        "IsActive": true
      }
    ]
  },
  "Application": {
    "Name": "CodeLearning Platform",
    "Version": "1.0.0",
    "SupportEmail": "support@codelearning.com"
  }
}