@model List<Laba1_2.Models.Challenge>
@{
    ViewData["Title"] = "Мої завдання";
}

<link rel="stylesheet" href="~/css/mentor.css?v=@DateTime.Now.Ticks" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-journal-code me-2"></i>Мої завдання
            </h2>
            <p class="text-muted mb-0">Керуйте своїми завданнями для студентів</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Створити завдання
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4 mb-4">
            @{
                int totalChallenges = Model.Count();
                int activeChallenges = Model.Count(m => m.IsActive);
                int totalSubmissions = Model.Sum(m => m.Solutions.Count);
                int totalUsers = Model.SelectMany(m => m.Solutions).Select(s => s.UserId).Distinct().Count();
            }
            
            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="gradient-primary rounded p-3 me-3 icon-circle">
                                <i class="bi bi-journal-code text-white fs-4"></i>
                            </div>
                            <div>
                                <h4 class="fw-bold mb-0">@totalChallenges</h4>
                                <small class="text-muted">Всього завдань</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="gradient-success rounded p-3 me-3 icon-circle">
                                <i class="bi bi-check-circle text-white fs-4"></i>
                            </div>
                            <div>
                                <h4 class="fw-bold mb-0">@activeChallenges</h4>
                                <small class="text-muted">Активних завдань</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="gradient-warning rounded p-3 me-3 icon-circle">
                                <i class="bi bi-code-slash text-white fs-4"></i>
                            </div>
                            <div>
                                <h4 class="fw-bold mb-0">@totalSubmissions</h4>
                                <small class="text-muted">Відправлених рішень</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="gradient-info rounded p-3 me-3 icon-circle">
                                <i class="bi bi-people text-white fs-4"></i>
                            </div>
                            <div>
                                <h4 class="fw-bold mb-0">@totalUsers</h4>
                                <small class="text-muted">Унікальних студентів</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-modern">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="fw-bold mb-0">Список завдань</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Завдання</th>
                                <th>Складність</th>
                                <th>Статус</th>
                                <th>Рішення</th>
                                <th>Успішність</th>
                                <th>Студенти</th>
                                <th>Створено</th>
                                <th class="pe-4">Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var challenge in Model)
                            {
                                var totalSubs = challenge.Solutions.Count;
                                var successSubs = challenge.Solutions.Count(s => s.IsSuccessful);
                                var uniqueUsers = challenge.Solutions.Select(s => s.UserId).Distinct().Count();
                                var successRate = totalSubs > 0 ? (successSubs * 100.0 / totalSubs) : 0;
                                
                                <tr>
                                    <td class="ps-4">
                                        <div>
                                            <h6 class="fw-bold mb-1">@challenge.Title</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-trophy me-1"></i>@challenge.Points балів
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(challenge.DifficultyLevel <= 3 ? "success" : challenge.DifficultyLevel <= 6 ? "warning" : "danger")">
                                            @(challenge.DifficultyLevel <= 3 ? "Легкий" : challenge.DifficultyLevel <= 6 ? "Середній" : "Складний")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(challenge.IsActive ? "success" : "secondary")">
                                            @(challenge.IsActive ? "Активне" : "Неактивне")
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@totalSubs</strong>
                                        <small class="text-muted">рішень</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="progress progress-modern" style="height: 6px; min-width: 80px; flex: 1;">
                                                <div class="progress-bar bg-@(successRate >= 70 ? "success" : successRate >= 40 ? "warning" : "danger")" 
                                                     style="width: @successRate%"></div>
                                            </div>
                                            <small class="text-muted" style="min-width: 40px;">@successRate.ToString("F0")%</small>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>@uniqueUsers</strong>
                                        <small class="text-muted">студентів</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@challenge.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td class="pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@challenge.Id" 
                                               class="btn btn-outline-primary" title="Деталі">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Solutions" asp-route-id="@challenge.Id" 
                                               class="btn btn-outline-info" title="Рішення">
                                                <i class="bi bi-code-square"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@challenge.Id" 
                                               class="btn btn-outline-warning" title="Редагувати">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-outline-danger" 
                                                    onclick="deleteChallenge(@challenge.Id, '@challenge.Title')" 
                                                    title="Видалити">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card card-modern">
            <div class="card-body text-center py-5">
                <i class="bi bi-journal-x" style="font-size: 4rem; color: #d1d5db;"></i>
                <h4 class="mt-3 fw-bold">Ще немає завдань</h4>
                <p class="text-muted mb-4">Створіть своє перше завдання для студентів</p>
                <a asp-action="Create" class="btn btn-success btn-modern">
                    <i class="bi bi-plus-circle me-2"></i>Створити перше завдання
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteChallenge(id, title) {
            if (confirm(`Ви впевнені, що хочете видалити завдання "${title}"?\n\nЦе також видалить всі пов'язані рішення студентів.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete")';
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = id;
                form.appendChild(idInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}