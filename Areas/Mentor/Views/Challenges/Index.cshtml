@model List<Laba1_2.Models.Challenge>
@{
    ViewData["Title"] = "Мої завдання";
}

<link rel="stylesheet" href="~/css/mentor.css?v=@DateTime.Now.Ticks" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-journal-code me-2"></i>Мої завдання
            </h2>
            <p class="text-muted mb-0">Керуйте своїми завданнями для студентів</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Створити завдання
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var challenge in Model)
            {
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-modern h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-@(challenge.DifficultyLevel <= 3 ? "success" : challenge.DifficultyLevel <= 6 ? "warning" : "danger")">
                                    @(challenge.DifficultyLevel <= 3 ? "Легкий" : challenge.DifficultyLevel <= 6 ? "Середній" : "Складний")
                                </span>
                                <span class="badge bg-@(challenge.IsActive ? "success" : "secondary")">
                                    @(challenge.IsActive ? "Активне" : "Неактивне")
                                </span>
                            </div>

                            <h5 class="fw-bold mb-2">@challenge.Title</h5>
                            <p class="text-muted small mb-3">
                                @(challenge.Description.Length > 100 ? challenge.Description.Substring(0, 100) + "..." : challenge.Description)
                            </p>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-trophy me-1"></i>@challenge.Points балів
                                </small>
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-calendar me-1"></i>Створено: @challenge.CreatedAt.ToString("dd.MM.yyyy")
                                </small>
                                <small class="text-muted d-block">
                                    <i class="bi bi-code-slash me-1"></i>@challenge.ChallengeLanguages.Count мов
                                </small>
                            </div>

                            <div class="d-flex gap-2 mt-auto">
                                <a asp-action="Edit" asp-route-id="@challenge.Id" class="btn btn-outline-warning btn-sm flex-grow-1">
                                    <i class="bi bi-pencil me-1"></i>Редагувати
                                </a>
                                <button class="btn btn-outline-danger btn-sm" onclick="deleteChallenge(@challenge.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card card-modern">
            <div class="card-body text-center py-5">
                <i class="bi bi-journal-x" style="font-size: 4rem; color: #d1d5db;"></i>
                <h4 class="mt-3 fw-bold">Ще немає завдань</h4>
                <p class="text-muted mb-4">Створіть своє перше завдання для студентів</p>
                <a asp-action="Create" class="btn btn-success btn-modern">
                    <i class="bi bi-plus-circle me-2"></i>Створити перше завдання
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteChallenge(id) {
            if (confirm('Ви впевнені, що хочете видалити це завдання?')) {
                // В реальному додатку тут буде AJAX запит
                window.location.href = `/Mentor/Challenges/Delete/${id}`;
            }
        }
    </script>
}