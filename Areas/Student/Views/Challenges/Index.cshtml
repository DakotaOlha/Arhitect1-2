@model List<Laba1_2.Models.Challenge>
@{
    ViewData["Title"] = "Завдання з програмування";
}

@section Styles {
    <link rel="stylesheet" href="~/css/challenges.css" asp-append-version="true" />
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="filters-sidebar">
                <div class="card filter-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-funnel me-2"></i>Фільтри
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Search -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Пошук</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Назва завдання...">
                            </div>
                        </div>

                        <!-- Difficulty Filter -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Складність</label>
                            <div class="filter-options">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="difficultyEasy" value="easy" checked>
                                    <label class="form-check-label" for="difficultyEasy">
                                        <span class="badge bg-success me-2">Легкий</span>
                                        <span class="text-muted small">(@Model.Count(c => c.DifficultyLevel <= 3))</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="difficultyMedium" value="medium" checked>
                                    <label class="form-check-label" for="difficultyMedium">
                                        <span class="badge bg-warning me-2">Середній</span>
                                        <span class="text-muted small">(@Model.Count(c => c.DifficultyLevel >= 4 && c.DifficultyLevel <= 6))</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="difficultyHard" value="hard" checked>
                                    <label class="form-check-label" for="difficultyHard">
                                        <span class="badge bg-danger me-2">Складний</span>
                                        <span class="text-muted small">(@Model.Count(c => c.DifficultyLevel >= 7))</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Language Filter -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Мови програмування</label>
                            <div class="filter-options">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="langPython" checked>
                                    <label class="form-check-label" for="langPython">
                                        <i class="bi bi-filetype-py text-success me-1"></i>Python
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="langJavaScript" checked>
                                    <label class="form-check-label" for="langJavaScript">
                                        <i class="bi bi-filetype-js text-warning me-1"></i>JavaScript
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="langCSharp" checked>
                                    <label class="form-check-label" for="langCSharp">
                                        <i class="bi bi-code text-primary me-1"></i>C#
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="langJava" checked>
                                    <label class="form-check-label" for="langJava">
                                        <i class="bi bi-filetype-java text-danger me-1"></i>Java
                                    </label>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-primary w-100" id="applyFilters">
                            <i class="bi bi-check-circle me-2"></i>Застосувати
                        </button>
                        <button class="btn btn-outline-secondary w-100 mt-2" id="resetFilters">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Скинути
                        </button>
                    </div>
                </div>

                <!-- Progress Card -->
                <div class="card filter-card mt-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">
                            <i class="bi bi-graph-up me-2"></i>Ваш прогрес
                        </h6>
                        <div class="progress-item mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Загалом</small>
                                <small class="fw-bold">12/95</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-primary" style="width: 12%"></div>
                            </div>
                        </div>
                        <div class="progress-item mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Легкі</small>
                                <small class="fw-bold">8/45</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" style="width: 18%"></div>
                            </div>
                        </div>
                        <div class="progress-item mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Середні</small>
                                <small class="fw-bold">4/32</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" style="width: 12%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Складні</small>
                                <small class="fw-bold">0/18</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-danger" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-code-slash me-2"></i>Завдання з програмування
                    </h2>
                    <p class="text-muted mb-0">Практикуйте свої навички на @Model.Count завданнях</p>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-sort-down me-2"></i>Сортування
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#" data-sort="difficulty"><i class="bi bi-bar-chart me-2"></i>За складністю</a></li>
                        <li><a class="dropdown-item" href="#" data-sort="title"><i class="bi bi-sort-alpha-down me-2"></i>За назвою</a></li>
                        <li><a class="dropdown-item" href="#" data-sort="points"><i class="bi bi-trophy me-2"></i>За балами</a></li>
                    </ul>
                </div>
            </div>

            <!-- Challenges Grid -->
            <div class="row g-4" id="challengesGrid">
                @foreach (var challenge in Model)
                {
                    var difficultyClass = challenge.DifficultyLevel <= 3 ? "easy" : challenge.DifficultyLevel <= 6 ? "medium" : "hard";
                    var difficultyBadge = challenge.DifficultyLevel <= 3 ? "success" : challenge.DifficultyLevel <= 6 ? "warning" : "danger";
                    var difficultyText = challenge.DifficultyLevel <= 3 ? "Легкий" : challenge.DifficultyLevel <= 6 ? "Середній" : "Складний";

                    <div class="col-xl-4 col-lg-6 challenge-item" 
                         data-difficulty="@difficultyClass" 
                         data-title="@challenge.Title.ToLower()"
                         data-points="@challenge.Points">
                        <div class="challenge-card difficulty-@difficultyClass">
                            <div class="challenge-header">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-@difficultyBadge">@difficultyText</span>
                                    <button class="btn btn-link p-0 bookmark-btn" data-id="@challenge.Id">
                                        <i class="bi bi-bookmark"></i>
                                    </button>
                                </div>
                                <h5 class="challenge-title fw-bold mb-2">@challenge.Title</h5>
                                <p class="challenge-description text-muted small mb-3">
                                    @(challenge.Description.Length > 100 ? challenge.Description.Substring(0, 100) + "..." : challenge.Description)
                                </p>
                            </div>
                            <div class="challenge-footer">
                                <div class="d-flex flex-wrap gap-1 mb-3">
                                    @foreach (var cl in challenge.ChallengeLanguages.Take(3))
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-code me-1"></i>@cl.Language.Name
                                        </span>
                                    }
                                    @if (challenge.ChallengeLanguages.Count > 3)
                                    {
                                        <span class="badge bg-secondary">+@(challenge.ChallengeLanguages.Count - 3)</span>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-trophy text-warning me-1"></i>
                                        <small class="fw-bold">@challenge.Points балів</small>
                                    </div>
                                    <a asp-action="Details" asp-route-id="@challenge.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-play-circle me-1"></i>Розв'язати
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3">Немає доступних завдань</h4>
                    <p class="text-muted">Скоро з'являться нові завдання!</p>
                </div>
            }

            <!-- Pagination -->
            <nav class="mt-5" id="pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/challenges.js" asp-append-version="true"></script>
}