@{
    ViewData["Title"] = "Мій профіль";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card card-modern">
                <div class="card-body text-center">
                    <div class="gradient-primary rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-person-circle text-white fs-1"></i>
                    </div>
                    <h4 class="fw-bold">@User.Identity?.Name</h4>
                    <p class="text-muted">Студент</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary">Редагувати профіль</button>
                        <button class="btn btn-outline-secondary">Змінити пароль</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="card card-modern">
                <div class="card-header bg-transparent border-bottom">
                    <h4 class="fw-bold mb-0">Інформація профілю</h4>
                </div>
                <div class="card-body">
                    <!-- Profile info will be here -->
                    <p>Тут буде детальна інформація профілю...</p>
                </div>
            </div>
        </div>
    </div>
</div>