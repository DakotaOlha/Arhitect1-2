@{
    ViewData["Title"] = "Панель студента";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card card-modern">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="gradient-primary rounded-circle p-2 d-inline-flex mb-3">
                            <i class="bi bi-person-circle text-white fs-1"></i>
                        </div>
                        <h5 class="fw-bold">@User.Identity?.Name</h5>
                        <span class="badge bg-success">Student</span>
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link active" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i>Огляд
                        </a>
                        <a class="nav-link" asp-controller="Challenges" asp-action="Index">
                            <i class="bi bi-journal-code me-2"></i>Завдання
                        </a>
                        <a class="nav-link" asp-controller="Solutions" asp-action="Index">
                            <i class="bi bi-check-circle me-2"></i>Мої рішення
                        </a>
                        <a class="nav-link" asp-controller="Profile" asp-action="Index">
                            <i class="bi bi-person me-2"></i>Профіль
                        </a>
                        <a class="nav-link" href="#">
                            <i class="bi bi-trophy me-2"></i>Досягнення
                        </a>
                    </nav>
                </div>
            </div>

            <div class="card card-modern mt-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Прогрес</h6>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small>Завершено завдань</small>
                            <small>25/100</small>
                        </div>
                        <div class="progress progress-modern">
                            <div class="progress-bar bg-success" style="width: 25%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small>Успішність</small>
                            <small>85%</small>
                        </div>
                        <div class="progress progress-modern">
                            <div class="progress-bar bg-primary" style="width: 85%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            <div class="card card-modern gradient-primary text-white mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="fw-bold">Вітаємо, @User.Identity?.Name! 👋</h3>
                            <p class="mb-0">Продовжуйте вашу подорож у світ програмування. Сьогодні чудовий день для нового завдання!</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-emoji-smile fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card card-modern">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="gradient-success rounded p-3 me-3">
                                    <i class="bi bi-check-circle text-white fs-4"></i>
                                </div>
                                <div>
                                    <h4 class="fw-bold mb-0">25</h4>
                                    <small class="text-muted">Вирішено завдань</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card card-modern">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="gradient-warning rounded p-3 me-3">
                                    <i class="bi bi-clock text-white fs-4"></i>
                                </div>
                                <div>
                                    <h4 class="fw-bold mb-0">12</h4>
                                    <small class="text-muted">В процесі</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card card-modern">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="gradient-primary rounded p-3 me-3">
                                    <i class="bi bi-trophy text-white fs-4"></i>
                                </div>
                                <div>
                                    <h4 class="fw-bold mb-0">1,250</h4>
                                    <small class="text-muted">Бали</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card card-modern">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="gradient-dark rounded p-3 me-3">
                                    <i class="bi bi-graph-up text-white fs-4"></i>
                                </div>
                                <div>
                                    <h4 class="fw-bold mb-0">15</h4>
                                    <small class="text-muted">Ранг</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card card-modern">
                        <div class="card-header bg-transparent border-bottom">
                            <h5 class="fw-bold mb-0">Остання активність</h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-success"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted">2 години тому</small>
                                        <p class="mb-0">Завершено завдання "Two Sum"</p>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted">Вчора</small>
                                        <p class="mb-0">Почато завдання "Binary Search"</p>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-warning"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted">3 дні тому</small>
                                        <p class="mb-0">Отримано досягнення "First Steps"</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card card-modern">
                        <div class="card-header bg-transparent border-bottom">
                            <h5 class="fw-bold mb-0">Рекомендовані завдання</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-1">Reverse String</h6>
                                            <small class="text-muted">Python • Easy</small>
                                        </div>
                                        <span class="badge bg-success">Нове</span>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-1">Binary Search</h6>
                                            <small class="text-muted">C# • Medium</small>
                                        </div>
                                        <span class="badge bg-warning">Популярне</span>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-1">Linked List Cycle</h6>
                                            <small class="text-muted">Java • Hard</small>
                                        </div>
                                        <span class="badge bg-danger">Складне</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 20px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -20px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
        padding-left: 10px;
    }
</style>