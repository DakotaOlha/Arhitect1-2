        padding-left: 15px;
        padding-right: 15px;
    }

    .row {
        margin-left: -7.5px;
        margin-right: -7.5px;
    }

    .col, .col-1, .col-10, .col-11, .col-12, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-auto,
