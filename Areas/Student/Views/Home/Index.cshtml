<style>
    /* Modern CSS Variables */
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --danger-gradient: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        --info-gradient: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        --dark-gradient: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
        --secondary-gradient: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    }

    /* Modern Cards */
    .card-modern {
        background: rgba(255, 255, 255, 0.05) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 15px !important;
        transition: all 0.3s ease;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

        .card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: rgba(255, 255, 255, 0.2) !important;
        }

    /* Gradient Backgrounds */
    .gradient-primary {
        background: var(--primary-gradient) !important;
        border: none !important;
    }

    .gradient-success {
        background: var(--success-gradient) !important;
        border: none !important;
    }

    .gradient-warning {
        background: var(--warning-gradient) !important;
        border: none !important;
    }

    .gradient-danger {
        background: var(--danger-gradient) !important;
        border: none !important;
    }

    .gradient-info {
        background: var(--info-gradient) !important;
        border: none !important;
    }

    .gradient-dark {
        background: var(--dark-gradient) !important;
        border: none !important;
    }

    .gradient-secondary {
        background: var(--secondary-gradient) !important;
        border: none !important;
    }

    /* Buttons */
    .btn-modern {
        border: none !important;
        border-radius: 10px !important;
        padding: 12px 24px !important;
        font-weight: 600 !important;
        transition: all 0.3s ease !important;
        position: relative;
        overflow: hidden;
        text-decoration: none;
        display: inline-block;
    }

        .btn-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-modern:hover::before {
            left: 100%;
        }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

    /* Feature Cards */
    .feature-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            border-color: rgba(102, 126, 234, 0.3);
        }

    /* Timeline */
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 25px;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 5px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 3px solid #1a1a1a;
    }

    .timeline-content {
        padding-left: 10px;
    }

    /* Progress Circles */
    .progress-circle {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto;
        border-radius: 50%;
        background: conic-gradient(var(--progress-color, #667eea) var(--value, 0%), #2d3748 0%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .progress-circle::before {
            content: '';
            position: absolute;
            width: 80px;
            height: 80px;
            background: #1a1a1a;
            border-radius: 50%;
        }

        .progress-circle.easy {
            --progress-color: #28a745;
        }

        .progress-circle.medium {
            --progress-color: #ffc107;
        }

        .progress-circle.hard {
            --progress-color: #dc3545;
        }

    .progress-value {
        position: relative;
        z-index: 1;
        color: #fff;
        font-weight: 600;
    }

    /* Text colors for dark theme */
    .text-muted {
        color: #6c757d !important;
    }

    .text-white {
        color: #fff !important;
    }

    /* Badge improvements */
    .badge {
        font-weight: 500;
        padding: 6px 12px;
    }

    /* List group improvements */
    .list-group-item {
        background: transparent;
        border-color: rgba(255, 255, 255, 0.1);
        color: #e9ecef;
    }

        .list-group-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }

    /* Ensure proper spacing */
